{
  "type": "config",
  "id": "conf.service.restic",
  "title": "Restic",
  "queryinfo": {
    "xpath": "//services/restic",
    "iterable": false
  },
  "properties": {
    "settings": {
      "type": "object",
      "properties": {
        "enable": {
          "type": "boolean",
          "default": true
        },
        "version": {
          "type": "string"
        }
      }
    },
    "repos": {
      "type": "object",
      "properties": {
        "repo": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "uuid": {
                "type": "string",
                "format": "uuidv4"
              },
              "name": {
                "type": "string"
              },
              "type": {
                "type": "string",
                "enum": [
                  "local"
                ],
                "default": "local"
              },
              "sharedfolderref": {
                "type": "string",
                "oneOf": [
                  {
                    "type": "string",
                    "format": "uuidv4"
                  },
                  {
                    "type": "string",
                    "maxLength": 0
                  }
                ],
                "default": ""
              }
            }
          }
        }
      }
    }
  }
}
